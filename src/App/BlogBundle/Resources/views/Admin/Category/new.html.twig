{% extends "IllarraCoreBundle:Admin:layout.html.twig" %}

{% import "IllarraCoreBundle:Admin:helper.html.twig" as helper %}

{% trans_default_domain "illarra_admin" %}

{% block content %}
<div class="row">
    <div class="large-12 columns">
        <div class="button-bar">
            <ul class="button-group radius">
                <li>{{ helper.action_back_button(path('admin_app_blog_category_index')) }}</li>
            </ul>
        </div>
        <hr class="dark" />
        <h3>{{ 'category.title.new'|trans }}</h3>
    </div>
</div>
<div class="row">
    <div class="large-8 columns">
        {% include 'AppBlogBundle:Admin/Category:_form.html.twig'
            with {
                'action': path('admin_app_blog_category_create'),
                'method': 'POST',
                'form': form
            } only
        %}
    </div>
</div>
{% endblock %}
